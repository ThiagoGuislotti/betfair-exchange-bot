<Window x:Class="BetfairBirzhaBot.Views.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetfairBirzhaBot.Views"
        mc:Ignorable="d"
        Title="AuthWindow" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Margin="10" Text="Введите пароль"/>
            <TextBox Margin="10" Text="{Binding Password}"/>
            <Button Margin="10" Content="Войти" Command="{Binding LoginCommand}"/>
        </StackPanel>
    </Grid>
</Window>
